<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/list_item_trip_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/list_item_trip_destination_text_view"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Trip Title"
        />

    <TextView
        android:id="@+id/list_item_trip_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_trip_title_text_view"
        android:layout_toStartOf="@+id/list_item_trip_destination_text_view"
        android:padding="4dp"
        tools:text="Trip Date"
        />

    <TextView
        android:id="@+id/list_item_trip_destination_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="4dp"
        tools:text="Trip Destination"/>
</RelativeLayout>