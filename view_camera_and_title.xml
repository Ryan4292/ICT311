<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_marginTop="16dp">
    <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginEnd="4dp"
        >
        <ImageView
            android:id="@+id/trip_photo"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:background="@android:color/darker_gray"
            android:cropToPadding="true"
            android:contentDescription="@string/camera_image"/>
        <ImageButton
            android:id="@+id/trip_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src ="@android:drawable/ic_menu_camera"
            android:contentDescription="@string/camera_button"/>


    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"

        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trip_title_label"
            style="?android:listSeparatorTextViewStyle"
            />
        <EditText android:id="@+id/trip_title"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/trip_title_hint"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trip_details_label"
            style="?android:listSeparatorTextViewStyle"
            />
    </LinearLayout>
</LinearLayout>